@model AssetViewModel
@{
    ViewData["Title"] = "View Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @*this is for the search criteria*@
    <div class="col-4">
        <form id="viewInventoryForm">
            <div class="d-flex justify-content-end">
                <div class="col-form-label ">
                    <label for="keywordSearch">Keyword Search:</label>
                    <input id="keywordSearch" type="text" asp-for="AssetDTO.KeywordSearch" value="" required/>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <partial name="_ItemSearchInput" />
            </div>
            <div class="d-flex justify-content-end select-css">
                <partial name="_LocationSelect" />
            </div>
            <div class="d-flex justify-content-end">
                <partial name="_ClientSiteSelect" />
            </div>
        </form>
        <div class="d-flex justify-content-end">
            <partial name="_SearchButton" />
        </div>
    </div>

    @*this is for the results*@
    <div class="col-8">
        <div id="renderPartialDiv">
            <partial name="_StartSearch" />
        </div>
    </div>
</div>
<div id="renderModifyAssetModalDiv">
</div>


@section Scripts {
    <script src="~/js/Scripts.js"></script>
}



